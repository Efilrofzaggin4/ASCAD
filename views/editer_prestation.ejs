<form method="POST" action="/admin/prestation_admin/editer_prestation/<%=prestations.id%>">
    <input type="hidden" name="id" value="<%=prestations.id%>" />

    <label for="titre">Titre :</label>
    <input type="text" id="titre" name="titre" value="<%=prestations.titre%>" required>
  
    <label for="description">Description :</label>
    <textarea id="description" name="description" required><%=prestations.description%></textarea>
  
    <label for="prix_ht">Prix HT :</label>
    <input type="number" id="prix_ht" name="prix_ht" step="0.01" value="<%=prestations.prix_ht%>" required>
  
    <label for="prix_ttc">Prix TTC :</label>
    <input type="number" id="prix_ttc" name="prix_ttc" step="0.01" value="<%=prestations.prix_ttc%>" required>
  
    <label for="catégorie">Catégorie :</label>
    <select id="catégorie" name="catégorie" required>
      <option value="Garde_d'enfants">Garde d'enfants</option>
      <option value="Personnes_âgées_handicaps">Personnes âgées, handicaps</option>
      <option value="Au_Quotidien">Au Quotidien</option>
    </select>
  
    <button class='js-form-submit' type="submit">Enregistrer</button>
  </form>